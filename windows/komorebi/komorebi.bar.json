{
  // this is the bit that gets you autocompletions!
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/master/schema.bar.json",
  "monitor": {
    // the bar only targets a single monitor
    "index": 0,
    // you can automatically apply a work area offset for the monitor when the bar is launched
    "work_area_offset": {
      "left": 0,
      "top": 60,
      "right": 0,
      "bottom": 60
    }
  },
  // run komorebi-bar --fonts to list fonts installed on your system
  // remember to only use the family here, not the weight (bold, light etc)
  "font_family": "JetBrains Mono",
  // we have some pre-bundled themes!
  //"theme": {
  //  "palette": "Catppuccin",
  //  "name": "Mocha",
  //  "accent": "Mauve"
  //},
  //"theme": {
  //  "palette": "Catppuccin",
  //  "name": "Latte",
  //  "accent": "Blue"
  //},
  //"theme": {
  //  "palette": "Base16",
  //  "name": "CatppuccinLatte",
  //  "accent": "Base0D"
  //},
  "theme": {
    "palette": "Base16",
    "name": "Ashes",
    "accent": "Base09"
  },
  "frame": {
    "inner_margin": {
      "x": 10,
      "y": 5
    }
  },
  "max_label_width": 200.0,
  "transparency_alpha": 150,
  //"widget_spacing": 5.0,
  "grouping": {
    "kind": "Widget",
    "style": "DefaultWithShadowB4O1S3",
    "transparency_alpha": 200,
    "rounding": 10
  },
  // laid out left to right
  "left_widgets": [
    {
      "Komorebi": {
        "workspaces": {
          "enable": true,
          "hide_empty_workspaces": false,
          "display": "Icon"
        },
        "layout": {
          "enable": true,
          "display": "Icon",
          "options": [
            "BSP",
            "UltrawideVerticalStack",
            "Monocle",
            "Floating",
            "Paused"
          ]
        },
        "focused_window": {
          "enable": true,
          "display": "IconAndText"
        }
      }
    }
  ],
  "center_widgets": [
    {
      "Date": {
        "enable": false,
        "format": "DayDateMonthYear",
        "label_prefix": "Icon"
      }
    },
    {
      "Time": {
        "enable": true,
        "format": "TwelveHour",
        "label_prefix": "Icon"
      }
    }
  ],
  // laid out left to right
  "right_widgets": [
    {
      "Media": {
        "enable": true
      }
    },
    //{
    //  "Storage": {
    //    "enable": true
    //  }
    //},
    {
      "Network": {
        "enable": true,
        "data_refresh_interval": 2,
        "show_default_interface": false,
        "show_total_data_transmitted": true,
        "show_network_activity": true,
        "network_activity_fill_characters": 10
      }
    },
    {
      "Cpu": {
        "enable": true,
        "data_refresh_interval": 5,
        "label_prefix": "Icon"
      }
    },
    {
      "Memory": {
        "enable": true,
        "data_refresh_interval": 5,
        "label_prefix": "Icon"
      }
    }
    //,
    //{
    //  "Battery": {
    //    "enable": true
    //  }
    //}
  ]
}