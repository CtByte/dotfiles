  "mouse": {
    // The variable will be resolved
    //"on_primary_double_click": "komorebic replace-configuration $Env:USERPROFILE/komorebi.json",
    
    // This is the same as below but it feels slower
    // "on_primary_double_click": "komorebic toggle-pause",
    "on_primary_double_click": {
      "focus_monitor_at_cursor": false,
      "ignore_mouse_follows_focus": false,
      "message": {
        "type": "TogglePause"
      }
    },
    "on_secondary_click": {
      "message": {
        "type": "NewWorkspace"
      }
    },
    "on_middle_click": {
      "message": {
        "type": "CloseWorkspace"
      }
    },
    "on_extra2_click": {
      "message": {
        "type": "CycleStack",
        "content": "Next"
      }
    },
    "on_extra1_click": {
      "message": {
        "type": "CycleStack",
        "content": "Previous"
      }
    },
    "vertical_scroll_threshold": 100,
    "on_scroll_up": {
      "message": {
        "type": "CycleFocusWorkspace",
        "content": "Previous"
      }
    },
    "on_scroll_down": {
      "message": {
        "type": "CycleFocusWorkspace",
        "content": "Next"
      }
    },
    "horizontal_scroll_threshold": 100,
    "on_scroll_left": {
      "message": {
        "type": "CycleStackIndex",
        "content": "Previous"
      }
    },
    "on_scroll_right": {
      "message": {
        "type": "CycleStackIndex",
        "content": "Next"
      }
    }
  },
  "monitor": 0,
  "height": 60,
  "padding": { "vertical": 15 },
  "font_family": "JetBrains Mono",
  //"theme": {
  //  "palette": "Catppuccin",
  //  "name": "Latte",
  //  "accent": "Blue"
  //},
  "theme": {
    "palette": "Base16",
    "name": "Ashes",
    "accent": "Base09",
    "auto_select_fill": "Base09",
    "auto_select_text": "Base02"
  },
  "max_label_width": 500.0,
  "transparency_alpha": 150,
  "grouping": {
    "kind": "Widget",
    "style": "DefaultWithShadow",
    "transparency_alpha": 200,
    "rounding": 10
  },
  "left_widgets": [
    {
      "Cpu": {
        "enable": true,
        "data_refresh_interval": 5,
        "label_prefix": "Icon",
        "auto_select_over": 10
      }
    },
    {
      "Memory": {
        "enable": true,
        "data_refresh_interval": 5,
        "label_prefix": "Icon",
        "auto_select_over": 45
      }
    },
    {
      "Battery": {
        "enable": true,
        "hide_on_full_charge": true,
        "auto_select_under": 15
      }
    },
    {
      "Storage": {
        "enable": true,
        "auto_select_over": 95,
        "auto_hide_under": 94
      }
    },
    {
      "Komorebi": {
        "workspaces": {
          "enable": true,
          "hide_empty_workspaces": false,
          "display": "AllIcons"
        },
        "layout": {
          "enable": true,
          "display": "Icon" //,
          //"options": [
          //  "BSP",
          //  "UltrawideVerticalStack",
          //  "Grid",
          //  "Monocle",
          //  "Floating",
          //  "Paused"
          //]
        },
        "workspace_layer": {
          "enable": true,
          "display": "Icon",
          "show_when_tiling": false
        },
        "focused_window": {
          "enable": false,
          "display": "IconAndTextOnSelected"
        },
        "locked_container": {
          "enable": true,
          "display": "Icon",
          "show_when_unlocked": false
        }
      }
    }
  ],
  "center_widgets": [
    {
      "Komorebi": {
        "workspaces": {
          "enable": false,
          "hide_empty_workspaces": false,
          "display": "Icon"
        },
        "layout": {
          "enable": false,
          "display": "Icon"
        },
        "focused_window": {
          "enable": true,
          "display": "IconAndTextOnSelected"
        },
        "configuration_switcher": {
          "enable": false,
          "configurations": {
            "home": "$HOME/komorebi.json",
            "work": "$Env:USERPROFILE/komorebi.work.json"
          }
        }
      }
    }
    //    {
    //      "Date": {
    //        "enable": true,
    //        "format": "DayDateMonthYear",
    //        "label_prefix": "Icon"
    //      }
    //    },
    //    {
    //      "Time": {
    //        "enable": true,
    //        "format": { "Custom": "%H:%M" },
    //        "label_prefix": "Icon"
    //      }
    //    }
  ],
  "right_widgets": [
    {
      "Media": {
        "enable": true
      }
    },
    {
      "Network": {
        "enable": true,
        "data_refresh_interval": 2,
        "show_default_interface": false,
        "show_total_activity": false,
        "show_activity": true,
        "activity_left_padding": 10,
        "auto_select": {
          "received_over": 2097152, // 2MiB
          "transmitted_over": 1048576 // 1MiB
        }
      }
    },
    {
      "Time": {
        "enable": true,
        "format": "BinaryCircle",
        "label_prefix": "Icon",
        "changing_icon": true
      }
    },
    {
      "Time": {
        "enable": false,
        "format": { "Custom": "%T %Z (Jeezy)" },
        "timezone": "US/Pacific"
      }
    }
  ]
}
