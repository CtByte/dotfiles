{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/master/schema.bar.json",
  "monitor": {
    "index": 0,
    "work_area_offset": {
      "left": 0,
      "top": 50,
      "right": 0,
      "bottom": 50
    }
  },
  "font_family": "JetBrains Mono",
  "frame": {
    "inner_margin": {
      "x": 10,
      "y": 5
    }
  },
  "max_label_width": 250.0,
  "transparency_alpha": 0,
  "grouping": {
    "kind": "Widget",
    "style": "DefaultWithShadow",
    "transparency_alpha": 200,
    "rounding": 10
  },
  "left_widgets": [
    {
      "Komorebi": {
        "workspaces": {
          "enable": true,
          "hide_empty_workspaces": false,
          "display": "Icon"
        },
        "layout": {
          "enable": true,
          "display": "Icon",
          "options": [
            "BSP",
            "UltrawideVerticalStack",
            "Monocle",
            "Floating",
            "Paused"
          ]
        },
        "focused_window": {
          "enable": true,
          "display": "IconAndTextOnSelected"
        }
      }
    }
  ],
  "center_widgets": [
    {
      "Date": {
        "enable": false,
        "format": "DayDateMonthYear",
        "label_prefix": "Icon"
      }
    },
    {
      "Time": {
        "enable": true,
        "format": "TwelveHour",
        "label_prefix": "Icon"
      }
    }
  ],
  "right_widgets": [
    {
      "Media": {
        "enable": true
      }
    },
    {
      "Network": {
        "enable": true,
        "data_refresh_interval": 2,
        "show_default_interface": false,
        "show_total_data_transmitted": false,
        "show_network_activity": true,
        "network_activity_fill_characters": 10
      }
    },
    {
      "Cpu": {
        "enable": true,
        "data_refresh_interval": 5,
        "label_prefix": "Icon"
      }
    },
    {
      "Memory": {
        "enable": true,
        "data_refresh_interval": 5,
        "label_prefix": "Icon"
      }
    }
  ]
}
