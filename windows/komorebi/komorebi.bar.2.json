  "mouse": {
    //"on_primary_double_click": "komorebic replace-configuration $Env:USERPROFILE/komorebi.json",
    //"on_primary_double_click": "wt powershell -NoExit -Command 'komorebic visible-windows'",
	"on_primary_double_click": {
      "focus_monitor_at_cursor": false,
      "ignore_mouse_follows_focus": false,
      "message": {
        "type": "TogglePause"
      }
    },
    "on_secondary_click": {
      "message": {
        "type": "NewWorkspace"
      }
    },
    "on_middle_click": {
      "message": {
        "type": "CloseWorkspace"
      }
    },
    "on_extra2_click": {
      "message": {
        "type": "StackAll"
      }
    },
    "on_extra1_click": {
      "message": {
        "type": "UnstackAll"
      }
    },
    "vertical_scroll_threshold": 100,
    "on_scroll_up": {
      "message": {
        "type": "CycleFocusWorkspace",
        "content": "Previous"
      }
    },
    "on_scroll_down": {
      "message": {
        "type": "CycleFocusWorkspace",
        "content": "Next"
      }
    },
    "horizontal_scroll_threshold": 100,
    "on_scroll_left": {
      "message": {
        "type": "CycleStack",
        "content": "Previous"
      }
    },
    "on_scroll_right": {
      "message": {
        "type": "CycleStack",
        "content": "Next"
      }
    }
  },
  "monitor": 1,
  "height": 60,
  "padding": { "vertical": 15 },
  // run komorebi-bar --fonts to list fonts installed on your system
  // remember to only use the family here, not the weight (bold, light etc)
  "font_family": "JetBrains Mono",
  // we have some pre-bundled themes!
  //"theme": {
  //  "palette": "Base16",
  //  "name": "Ashes",
  //  "accent": "Base09"
  //},
  "theme": {
    "palette": "Base16",
    "name": "Ashes",
    "accent": "Base09",
    "auto_select_fill": "Base09",
    "auto_select_text": "Base02"
  },
  "max_label_width": 500.0,
  "transparency_alpha": 150,
  //"widget_spacing": 10.0,
  "grouping": {
    "kind": "Widget",
    "style": "DefaultWithShadow",
    "transparency_alpha": 170,
    "rounding": 10
  },
  // laid out left to right
  "left_widgets": [
    {
      "Cpu": {
        "enable": true,
        "data_refresh_interval": 5,
        "label_prefix": "Icon",
        "auto_select_over": 10
      }
    },
    {
      "Memory": {
        "enable": true,
        "data_refresh_interval": 5,
        "label_prefix": "Icon",
        "auto_select_over": 45
      }
    },
    {
      "Battery": {
        "enable": true,
        "hide_on_full_charge": true,
        "auto_select_under": 15
      }
    },
    {
      "Komorebi": {
        "workspaces": {
          "enable": true,
          "hide_empty_workspaces": false,
          "display": "AllIcons"
        },
        "layout": {
          "enable": true,
          "display": "Icon"
        },
        "workspace_layer": {
          "enable": true,
          "display": "Icon",
          "show_when_tiling": false
        },
        "focused_window": {
          "enable": false,
          "display": "IconAndTextOnSelected"
        },
        "locked_container": {
          "enable": true,
          "display": "Icon",
          "show_when_unlocked": false
        }
      }
    }
  ],
  "center_widgets": [
    {
      "Komorebi": {
        "workspaces": {
          "enable": false,
          "hide_empty_workspaces": false,
          "display": "Icon"
        },
        "layout": {
          "enable": false,
          "display": "Icon"
        },
        "focused_window": {
          "enable": true,
          "display": "IconAndTextOnSelected"
        }
      }
    }
